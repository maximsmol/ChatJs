include includes/mixins.jade

doctype html
html(lang="en")
	head
		+headContent(''+roomId+' | Chat')

		link(href='/styles/room.css', rel='stylesheet')
	body
		+navbar

		.container.mainContainer
			.page-header
				h1= roomId
			div.msgs#msgs

		.inputArea
			.container
				.input-group.chatInputs
				input.msgInput#msgInput(placeholder='Enter a message', type='text')
				div.sendBtnContainer
					btn.sendBtn#sendBtn.btn.btn-primary Submit

		+scripts
		script(src='/socket.io/socket.io.js')
		script(src='/scripts/roomLogic.js')
